{
  "backup_config": {
    "tables": [
      {
        "table_arn": "arn:aws:dynamodb:us-east-1:YOUR_ACCOUNT:table/YOUR_TABLE_1",
        "table_name": "YOUR_TABLE_1"
      },
      {
        "table_arn": "arn:aws:dynamodb:us-east-1:YOUR_ACCOUNT:table/YOUR_TABLE_2",
        "table_name": "YOUR_TABLE_2"
      }
    ],
    "s3_bucket": "your-backup-bucket-name",
    "source_region": "us-east-1",
    "target_region": "us-west-2",
    "schedule": {
      "daily_backup": {
        "cron": "cron(0 2 * * ? *)",
        "description": "每天凌晨2点执行备份"
      }
    },
    "retention": {
      "daily_backups": 730
    }
  },
  "s3_lifecycle": {
    "daily_backup": {
      "transitions": [
        {"days": 30, "storage_class": "STANDARD_IA"},
        {"days": 90, "storage_class": "GLACIER"},
        {"days": 270, "storage_class": "DEEP_ARCHIVE"}
      ]
    }
  }
}
